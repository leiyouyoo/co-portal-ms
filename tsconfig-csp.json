{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "paths": {
      "@shared": [
        "src/app/shared/index"
      ],
      "@core": [
        "src/app/core/index"
      ],
      "@env/*": [
        "src/environments/*"
      ],
      "@layout": [
        "src/app/layout/default/index"
      ]
    }
  },
  "files": [
    "src/main-csp.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    ".scannerwork/**/*",
    "dist/**/*",
    "apps/**/*",
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/app/app.module.ts",
    "src/app/routes/route.module.ts",
    "src/app/routes/routes-routing.module.ts"
  ]
}
