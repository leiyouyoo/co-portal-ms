{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "paths": {
      "@shared": [
        "src/app/shared/index"
      ],
      "@core": [
        "src/app/core/index"
      ],
      "@env/*": [
        "src/environments/*"
      ],
      "@layout": [
        "src/app/layout/default/index"
      ],
      "@im": [
        "src/app/shared/im/index"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    // "src/**/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "apps/**/*",
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
