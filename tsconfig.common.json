{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "types": [
      "node"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared": [
        "src/app/shared/index"
      ],
      "@core": [
        "src/app/core/index"
      ],
      "@env/*": [
        "src/environments/*"
      ],
      "@layout": [
        "src/app/layout/default/index"
      ],
      "@im": [
        "src/app/shared/im/index"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "//enableIvy": false,
    "//fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
